---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import { logComponentLifecycle } from '../lib/logger';

// Log page component lifecycle
logComponentLifecycle('ContactPage', 'render', {
  pathname: Astro.url.pathname,
});
---

<Layout title='Contact Us - Astro Tailwind Boilerplate'>
  <!-- Hero Section -->
  <div class='bg-gradient-to-br from-primary-50 to-primary-100'>
    <div class='container-custom py-16 sm:py-20'>
      <div class='text-center max-w-3xl mx-auto'>
        <h1 class='text-4xl font-bold text-gray-900 sm:text-5xl mb-6'>
          Get in Touch
        </h1>
        <p class='text-xl text-gray-600 leading-relaxed'>
          Ready to start your next project? Have questions about our services? 
          We'd love to hear from you. Fill out the form below and we'll get back to you within 24 hours.
        </p>
      </div>
    </div>
  </div>

  <!-- Contact Form Section -->
  <div class='bg-white'>
    <div class='container-custom py-16 sm:py-20'>
      <div class='max-w-4xl mx-auto'>
        <ContactForm 
          title='Send us a Message'
          description='Tell us about your project or inquiry. We are here to help!'
        />
      </div>
    </div>
  </div>

  <!-- Contact Information Section -->
  <div class='bg-gray-50'>
    <div class='container-custom py-16 sm:py-20'>
      <div class='grid grid-cols-1 lg:grid-cols-3 gap-8'>
        <!-- Contact Info -->
        <div class='lg:col-span-1'>
          <h2 class='text-2xl font-bold text-gray-900 mb-6'>Contact Information</h2>
          <div class='space-y-6'>
            <div class='flex items-start'>
              <div class='flex-shrink-0'>
                <svg class='w-6 h-6 text-primary-600' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z' />
                </svg>
              </div>
              <div class='ml-4'>
                <h3 class='text-lg font-medium text-gray-900'>Email</h3>
                <p class='text-gray-600'>hello@example.com</p>
                <p class='text-sm text-gray-500'>We'll respond within 24 hours</p>
              </div>
            </div>

            <div class='flex items-start'>
              <div class='flex-shrink-0'>
                <svg class='w-6 h-6 text-primary-600' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z' />
                </svg>
              </div>
              <div class='ml-4'>
                <h3 class='text-lg font-medium text-gray-900'>Phone</h3>
                <p class='text-gray-600'>+1 (555) 123-4567</p>
                <p class='text-sm text-gray-500'>Mon-Fri 9AM-6PM EST</p>
              </div>
            </div>

            <div class='flex items-start'>
              <div class='flex-shrink-0'>
                <svg class='w-6 h-6 text-primary-600' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z' />
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M15 11a3 3 0 11-6 0 3 3 0 016 0z' />
                </svg>
              </div>
              <div class='ml-4'>
                <h3 class='text-lg font-medium text-gray-900'>Office</h3>
                <p class='text-gray-600'>123 Business Street<br />New York, NY 10001</p>
                <p class='text-sm text-gray-500'>By appointment only</p>
              </div>
            </div>
          </div>
        </div>

        <!-- FAQ Section -->
        <div class='lg:col-span-2'>
          <h2 class='text-2xl font-bold text-gray-900 mb-6'>Frequently Asked Questions</h2>
          <div class='space-y-4'>
            <div class='bg-white rounded-lg p-6 shadow-sm border border-gray-200'>
              <h3 class='text-lg font-medium text-gray-900 mb-2'>How quickly do you respond to inquiries?</h3>
              <p class='text-gray-600'>We typically respond to all inquiries within 24 hours during business days. For urgent matters, please indicate "High" in your priority level.</p>
            </div>

            <div class='bg-white rounded-lg p-6 shadow-sm border border-gray-200'>
              <h3 class='text-lg font-medium text-gray-900 mb-2'>What information should I include in my message?</h3>
              <p class='text-gray-600'>Please include details about your project requirements, timeline, and any specific questions you have. The more information you provide, the better we can assist you.</p>
            </div>

            <div class='bg-white rounded-lg p-6 shadow-sm border border-gray-200'>
              <h3 class='text-lg font-medium text-gray-900 mb-2'>Do you offer free consultations?</h3>
              <p class='text-gray-600'>Yes, we offer a free 30-minute consultation to discuss your project requirements and determine how we can best help you achieve your goals.</p>
            </div>

            <div class='bg-white rounded-lg p-6 shadow-sm border border-gray-200'>
              <h3 class='text-lg font-medium text-gray-900 mb-2'>What file formats do you accept for attachments?</h3>
              <p class='text-gray-600'>We accept PDF, DOC, DOCX, TXT, JPG, PNG, GIF, ZIP, and RAR files up to 10MB each. If you need to send larger files, please contact us directly.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Client-side logging for contact page interactions
  import { logComponentLifecycle } from '../lib/logger';

  // Log when contact page becomes interactive
  logComponentLifecycle('ContactPage', 'interactive', {
    pathname: window.location.pathname,
  });
</script>

