---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import { logComponentLifecycle } from '../lib/logger';

// Log page component lifecycle
logComponentLifecycle('ContactPage', 'render', {
  pathname: Astro.url.pathname,
});
---

<Layout title='Contact Us - Astro Tailwind Boilerplate'>

  <!-- Contact Form Section -->
  <section class='section-padding bg-white' data-testid='contact-form-section'>
    <div class='container-custom px-32 py-32'>
      <div class='max-w-5xl mx-auto'>
        <div class='text-center mb-16 lg:mb-20'>
          <div class='content-spacing'>
            <h2 class='text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 leading-tight' data-testid='contact-form-title'>
              <span class='bg-gradient-to-r from-primary-600 to-blue-600 bg-clip-text text-transparent'>Send us a Message</span>
            </h2>
            <p class='text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed' data-testid='contact-form-description'>
              Tell us about your project or inquiry. We are here to help!
            </p>
          </div>
        </div>
        
        <div class='bg-white border border-gray-100 rounded-3xl p-6 lg:p-10 xl:p-12 shadow-xl' data-testid='contact-form-container'>
          <ContactForm />
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Client-side logging for contact page interactions
  import { logComponentLifecycle } from '../lib/logger';

  // Log when contact page becomes interactive
  logComponentLifecycle('ContactPage', 'interactive', {
    pathname: window.location.pathname,
  });
</script>

