---
import Layout from '../layouts/Layout.astro';
import { logComponentLifecycle } from '../lib/logger';
import { Button, Card, CardHeader, CardTitle, CardDescription, CardContent, Badge } from '../components/ui';

// Log page component lifecycle
logComponentLifecycle('HomePage', 'render', {
  pathname: Astro.url.pathname,
});
---

<Layout title='Astro Tailwind Boilerplate'>
  <!-- Hero Section -->
  <section class='min-h-screen flex items-center justify-center bg-gradient-to-br from-white via-slate-50 to-blue-50/30' data-testid='home-hero'>
    <div class='absolute inset-0 bg-[radial-gradient(circle_at_30%_40%,rgba(59,130,246,0.08),transparent_50%)]'></div>
    <div class='absolute inset-0 bg-[radial-gradient(circle_at_70%_60%,rgba(147,51,234,0.05),transparent_50%)]'></div>
    
    <div class='container-custom relative z-10 text-center'>
      <!-- Hero Content -->
      <div class='max-w-4xl mx-auto space-y-8' data-testid='home-hero-content'>
        <div class='space-y-6'>
          <h1 class='text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold tracking-tight text-gray-900 leading-tight' data-testid='home-hero-title'>
            <span class='block'>Astro Tailwind</span>
            <span class='block bg-gradient-to-r from-primary-600 to-blue-600 bg-clip-text text-transparent'>Boilerplate</span>
          </h1>
          <p class='text-lg sm:text-xl lg:text-2xl text-gray-600 font-light leading-relaxed max-w-2xl mx-auto' data-testid='home-hero-description'>
            Production-ready Astro + Tailwind CSS boilerplate with <span class='font-semibold'>TypeScript</span>, <span class='font-semibold'>ESLint</span>, <span class='font-semibold'>Prettier</span>, <span class='font-semibold'>Playwright</span>, and <span class='font-semibold'>SEO optimization</span>.
          </p>
        </div>
        
        <!-- CTA Buttons -->
        <div class='flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center pt-4' data-testid='home-hero-cta'>
          <Button
            as="a"
            href='/contact'
            data-testid='home-cta-get-started'
            variant='default'
            size='lg'
            class='group px-8 py-4 text-lg font-semibold'
          >
            Get Started
            <svg class='inline-block ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M17 8l4 4m0 0l-4 4m4-4H3'></path>
            </svg>
          </Button>
          <Button
            as="a"
            href='https://github.com'
            data-testid='home-cta-github'
            variant='outline'
            size='lg'
            class='group px-8 py-4 text-lg font-semibold'
          >
            <svg class='inline-block mr-2 w-5 h-5' fill='currentColor' viewBox='0 0 24 24' aria-hidden='true'>
              <path fill-rule='evenodd' d='M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z' clip-rule='evenodd'></path>
            </svg>
            View on GitHub
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class='py-20 bg-gray-50/50' data-testid='home-features'>
    <div class='container-custom'>
      <div class='text-center mb-16'>
        <h2 class='text-3xl sm:text-4xl font-bold text-gray-900 mb-4'>Built with Modern Components</h2>
        <p class='text-lg text-gray-600 max-w-2xl mx-auto'>Experience the power of shadcn/ui components integrated with Astro and Tailwind CSS</p>
      </div>
      
      <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8'>
        <Card class='text-center'>
          <CardHeader>
            <div class='mx-auto w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4'>
              <svg class='w-6 h-6 text-primary' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M13 10V3L4 14h7v7l9-11h-7z' />
              </svg>
            </div>
            <CardTitle>Lightning Fast</CardTitle>
            <CardDescription>Built with Astro for optimal performance and SEO</CardDescription>
          </CardHeader>
          <CardContent>
            <div class='flex flex-wrap gap-2 justify-center'>
              <Badge variant='secondary'>Astro</Badge>
              <Badge variant='outline'>TypeScript</Badge>
            </div>
          </CardContent>
        </Card>

        <Card class='text-center'>
          <CardHeader>
            <div class='mx-auto w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4'>
              <svg class='w-6 h-6 text-primary' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z' />
              </svg>
            </div>
            <CardTitle>Beautiful UI</CardTitle>
            <CardDescription>shadcn/ui components with Tailwind CSS for stunning designs</CardDescription>
          </CardHeader>
          <CardContent>
            <div class='flex flex-wrap gap-2 justify-center'>
              <Badge variant='secondary'>shadcn/ui</Badge>
              <Badge variant='outline'>Tailwind CSS</Badge>
            </div>
          </CardContent>
        </Card>

        <Card class='text-center'>
          <CardHeader>
            <div class='mx-auto w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4'>
              <svg class='w-6 h-6 text-primary' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' />
              </svg>
            </div>
            <CardTitle>Production Ready</CardTitle>
            <CardDescription>Includes testing, linting, and deployment configurations</CardDescription>
          </CardHeader>
          <CardContent>
            <div class='flex flex-wrap gap-2 justify-center'>
              <Badge variant='secondary'>Playwright</Badge>
              <Badge variant='outline'>ESLint</Badge>
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Client-side logging for home page interactions
  import { logComponentLifecycle } from '../lib/logger';

  // Log when home page becomes interactive
  logComponentLifecycle('HomePage', 'interactive', {
    pathname: window.location.pathname,
  });

  // Track button clicks
  document.querySelectorAll('a[href="/contact"]').forEach(link => {
    link.addEventListener('click', () => {
      logComponentLifecycle('HomePage', 'cta_click', {
        action: 'contact_form',
        location: 'hero_section',
      });
    });
  });

  document.querySelectorAll('a[href*="github"]').forEach(link => {
    link.addEventListener('click', () => {
      logComponentLifecycle('HomePage', 'external_link_click', {
        destination: 'github',
        location: 'hero_section',
      });
    });
  });
</script>
