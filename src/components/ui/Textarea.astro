---
export interface Props {
  placeholder?: string
  value?: string
  name?: string
  id?: string
  required?: boolean
  disabled?: boolean
  rows?: number
  class?: string
  'aria-label'?: string
  'aria-describedby'?: string
}

const {
  placeholder = '',
  value = '',
  name = '',
  id = '',
  required = false,
  disabled = false,
  rows = 4,
  class: className = '',
  'aria-label': ariaLabel = '',
  'aria-describedby': ariaDescribedby = '',
  ...rest
} = Astro.props

const baseClasses = 'flex min-h-[80px] w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm text-gray-900 placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 disabled:cursor-not-allowed disabled:opacity-50 disabled:bg-gray-50'
const classes = `${baseClasses} ${className}`
---

<textarea
  placeholder={placeholder}
  name={name}
  id={id}
  required={required}
  disabled={disabled}
  rows={rows}
  class={classes}
  aria-label={ariaLabel}
  aria-describedby={ariaDescribedby}
  {...rest}
>{value}</textarea>
