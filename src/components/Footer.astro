---
import { logComponentLifecycle } from '../lib/logger';

// Log component lifecycle
logComponentLifecycle('Footer', 'render', {
  pathname: Astro.url.pathname,
});
---

<footer class='bg-gray-800 text-white'>
  <div class='container-custom py-12'>
    <div class='grid grid-cols-1 md:grid-cols-3 gap-8'>
      <div>
        <h3 class='text-lg font-semibold mb-4 text-white'>About</h3>
        <p class='text-gray-300'>
          Production-ready Astro + Tailwind CSS boilerplate with TypeScript, ESLint, Prettier,
          Playwright, and SEO optimization.
        </p>
      </div>
      <div>
        <h3 class='text-lg font-semibold mb-4 text-white'>Quick Links</h3>
        <ul class='space-y-2'>
          <li><a href='/' class='text-gray-300 hover:text-primary-400 transition-colors'>Home</a></li>
          <li><a href='/contact' class='text-gray-300 hover:text-primary-400 transition-colors'>Contact</a></li>
        </ul>
      </div>
      <div>
        <h3 class='text-lg font-semibold mb-4 text-white'>Contact</h3>
        <p class='text-gray-300'>Get in touch with us for any questions or support.</p>
      </div>
    </div>
    <div class='mt-8 pt-8 border-t border-gray-700 text-center'>
      <p class='text-gray-300'>Â© 2024 Astro Tailwind Boilerplate. All rights reserved.</p>
    </div>
  </div>
</footer>

<script>
  // Client-side logging for footer interactions
  import { logComponentLifecycle } from '../lib/logger';

  // Log when footer becomes interactive
  logComponentLifecycle('Footer', 'interactive', {
    pathname: window.location.pathname,
  });

  // Track footer link clicks
  document.querySelectorAll('footer a').forEach(link => {
    link.addEventListener('click', e => {
      const target = e.target as HTMLAnchorElement;
      logComponentLifecycle('Footer', 'link_click', {
        href: target.href,
        text: target.textContent?.trim(),
      });
    });
  });
</script>
