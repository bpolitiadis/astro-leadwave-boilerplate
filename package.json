{
  "name": "astro-tailwind-boilerplate",
  "type": "module",
  "version": "1.0.0",
  "description": "Production-ready Astro + Tailwind CSS boilerplate with TypeScript, ESLint, Prettier, Playwright, and SEO optimization",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.ts --ignore-pattern '*.astro'",
    "lint:fix": "eslint . --ext .js,.ts --ignore-pattern '*.astro' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "astro check",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:email": "playwright test tests/e2e/contact.spec.ts -g 'should send real email through Resend API'",
    "test:no-email": "playwright test tests/e2e/contact.spec.ts --grep-invert 'should send real email through Resend API'",
    "install:playwright": "playwright install",
    "clean": "rm -rf dist .astro"
  },
  "dependencies": {
    "astro": "^5.12.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "resend": "^4.8.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/tailwind": "^6.0.2",
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "lucide-astro": "^0.542.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
